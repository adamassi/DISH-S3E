<mujoco model="tableworld">
    <!-- Compiler settings: Defines the Euler sequence for rotations and scene statistics -->
    <compiler eulerseq="XYZ"/>
    <statistic center="0.3 0 0.4" extent="0.8"/>

    <!-- Visual settings: Defines lighting, haze, and rendering resolution -->
    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1"/> <!-- Headlight settings -->
        <rgba haze="0.15 0.25 0.35 1"/> <!-- Haze color and intensity -->
        <global azimuth="120" elevation="-20" offwidth="1280" offheight="720"/> <!-- Camera and framebuffer settings -->
    </visual>

    <!-- Asset definitions: Textures and materials used in the simulation -->
    <asset>
        <!-- Skybox gradient texture -->
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
        
        <!-- Ground texture -->
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>

        <!-- Wood texture -->
        <texture name="wood" file="wood.png" type="2d"/>
        <material name="wood_material" texture="wood" texrepeat="50 50" texuniform="true" rgba="0.8 0.8 0.8 1"/>
    </asset>

    <!-- World body: Defines the physical objects and layout of the scene -->
    <worldbody>
        <!-- Light source -->
        <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>

        <!-- Floor geometry -->
        <geom name="floor" pos="0.0 0.0 -0.8" size="0 0 0.05" type="plane" material="groundplane"/>

        <!-- Table 1 -->
        <body name="table1" pos="0.365 0 -0.005">
            <geom name="table1_top" type="box" size="0.625 0.42 0.01" pos="0 0 0"/> <!-- Tabletop -->
            <geom name="table1_leg_1" type="cylinder" size=".02 .4" pos=".5 -.33 -.4" euler="0 0 0"/> <!-- Leg 1 -->
            <geom name="table1_leg_2" type="cylinder" size=".02 .4" pos=".5 .33 -.4" euler="0 0 0"/> <!-- Leg 2 -->
            <geom name="table1_leg_3" type="cylinder" size=".02 .4" pos="-.5 -.33 -.4" euler="0 0 0"/> <!-- Leg 3 -->
            <geom name="table1_leg_4" type="cylinder" size=".02 .4" pos="-.5 .33 -.4" euler="0 0 0"/> <!-- Leg 4 -->
        </body>

        <!-- Table 2 -->
        <body name="table2" pos="-0.805 -0.615 -0.005">
            <geom name="table2_top" type="box" size="0.42 0.925 0.01" pos="0 0 0"/> <!-- Tabletop -->
            <geom name="table2_leg_1" type="cylinder" size=".02 .4" pos=".33 -.8 -.4" euler="0 0 0"/> <!-- Leg 1 -->
            <geom name="table2_leg_2" type="cylinder" size=".02 .4" pos=".33 .8 -.4" euler="0 0 0"/> <!-- Leg 2 -->
            <geom name="table2_leg_3" type="cylinder" size=".02 .4" pos="-.33 -.8 -.4" euler="0 0 0"/> <!-- Leg 3 -->
            <geom name="table2_leg_4" type="cylinder" size=".02 .4" pos="-.33 .8 -.4" euler="0 0 0"/> <!-- Leg 4 -->
        </body>

        <!-- dishs representing 'X' -->
        <body name="dish0" pos="-0.5 -0.8 0.025" quat="0. 0. 1. 0.">
            <freejoint name="dish0_fj"/> <!-- Free joint for movement -->
            <geom type="box" size=".02 .02 .02" material="wood_material"/> <!-- dish geometry -->
        </body>
        <body name="dish1" pos="-0.5 -0.7 0.025" quat="0. 0. 1. 0.">
            <freejoint name="dish1_fj"/>
            <geom type="box" size=".02 .02 .02" material="wood_material"/>
        </body>
        <body name="dish2" pos="-0.5 -0.6 0.025" quat="0. 0. 1. 0.">
            <freejoint name="dish2_fj"/>
            <geom type="box" size=".02 .02 .02" material="wood_material"/>
        </body>
        <body name="dish3" pos="-0.6 -0.8 0.025" quat="0. 0. 1. 0.">
            <freejoint name="dish3_fj"/>
            <geom type="box" size=".02 .02 .02" material="wood_material"/>
        </body>

        <!-- Cameras -->
        <camera name="top-right" pos="1.3 -1.5 1.1" euler="1 0 1.1"/> <!-- Top-right camera -->
        <camera name="robot-cam" pos="1.3 -1.5 1.1" euler="1 0 1.1" fovy="60"/> <!-- Robot camera -->
    </worldbody>
</mujoco>